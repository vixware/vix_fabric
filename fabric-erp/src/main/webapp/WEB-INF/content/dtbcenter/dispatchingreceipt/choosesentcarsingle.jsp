<script type="text/javascript">
	$.returnValue = "";
	function chkChange(chk, id, name) {
		if (chk.checked) {
			$.returnValue = id + "," + name;
		}
	}
	pager("start", "${vix}/dtbcenter/dispatchingReceiptAction!goTruckingOrderList.action?temp=1", "radio");
