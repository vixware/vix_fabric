<script type="text/javascript">
var name = "";
function loadName(){
	name = $('#nameS').val();
	name=Url.encode(name);
	name=Url.encode(name);
}
function saveOrUpdate(id){
	$.ajax({
		  url:'${vix}/common/regionalAction!goSaveOrUpdate.action?id='+id,
		  cache: false,
		  success: function(html){
			  asyncbox.open({
				 	modal:true,
					width : 740,
					height : 240,
					title:"销售区域",
					html:html,
					callback : function(action){
						if(action == 'ok'){
							if($('#regionalForm').validationEngine('validate')){
								$.post('${vix}/common/regionalAction!saveOrUpdate.action',
									{'regional.id':$("#id").val(),
									  'regional.name':$("#name").val(),
									  'regional.code':$("#code").val(),
									  'regional.enable':$(":radio[name=enable][checked]").val(),
									  'regional.memo':$("#memo").val()
									},
									function(result){
										showMessage(result);
										setTimeout("",1000);
										loadContent('${vix}/common/regionalAction!goList.action');
									}
								);
							}
						}
					},
					btnsbar : $.btn.OKCANCEL
				});
		  }
	});
};
$('input.btn[type="button"],input.btn[type="submit"]').hover(function(){
	$(this).addClass("btnhover");
},function(){
	$(this).removeClass("btnhover");
});

function deleteById(id){
	$.ajax({
		  url:'${vix}/common/regionalAction!deleteById.action?id='+id,
		  cache: false,
		  success: function(html){
			asyncbox.success(html,"提示信息",function(action){
				pager("start","${vix}/common/regionalAction!goListContent.action?name="+name,'regional');
			});
		  }
	});
}

function searchForContent(){
	loadName();
	pager("start","${vix}/common/regionalAction!goListContent.action?name="+name,'regional');
}
 
loadName();
//载入分页列表数据
