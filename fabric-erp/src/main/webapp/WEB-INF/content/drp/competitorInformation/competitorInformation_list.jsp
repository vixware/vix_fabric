	name=Url.encode(name);
}
function loadNameOr(){
	nameOr = $('#nameOr').val();
	nameOr = Url.encode(nameOr);
	nameOr = Url.encode(nameOr);
}
function loadPhone(){
	phone = $('#phone').val();
	phone = Url.encode(phone);
	phone = Url.encode(phone);
}
function saveOrUpdate(id,pageNo){
	$.ajax({
		  url:'${vix}/drp/competitorInformationAction!goSaveOrUpdate.action?id='+id+"&pageNo="+pageNo,
		  cache: false,
		  success: function(html){
		  	$("#mainContent").html(html);
		  }
	});
};
//批量删除
function deleteEntitys() {
	var ids = '';
	$("[name='chkId']").each(function() {
		if ($(this).attr('checked')) {
			ids += $(this).val() + ",";
		}
	});
	$.ajax({
		url : '${vix}/drp/competitorInformationAction!deleteByIds.action?ids=' + ids,
		cache : false,
		success : function(html) {
			asyncbox.success(html, "提示信息", function(action) {
				pager("start", "${vix}/drp/competitorInformationAction!goSingleList.action?1=1", 'brand');
			});
		}
	});
}


function searchForContent(i){
	if(i==0){
		loadName();
		pager("start","${vix}/drp/competitorInformationAction!goSingleList.action?name="+name,'brand');
	}else{
		loadNameOr();
		loadPhone();
		pager("start","${vix}/drp/competitorInformationAction!goSingleList.action?name="+name+"&telephone="+phone,'brand');
		}
}
 
loadName();
//载入分页列表数据
pager("start","${vix}/drp/competitorInformationAction!goSingleList.action?name="+name,'brand');
//排序 
function orderBy(orderField){
	loadName();
	var orderBy = $("#brandOrderBy").val();
	if(orderBy == 'desc'){
		orderBy = "asc";
	}else{
		orderBy = 'desc';
	}
	pager("start","${vix}/drp/competitorInformationAction!goSingleList.action?orderField="+orderField+"&orderBy="+orderBy,'brand');
}

bindSearch();
function currentPager(tag){
	loadName();
	pager(tag,"${vix}/drp/competitorInformationAction!goSingleList.action?name="+name,'brand');
}


/**重置搜索*/
function resetForContent(i){
	if(i == 0){
		$("#nameS").val("");
	}
	else{
		$("#nameOr").val("");
		$("#phone").val("");
	}
}
//状态
function srmState(state){
	pager("state","${vix}/drp/storeInformationAction!goSingleList.action?state="+state,'brand');
}
//最近使用
function srmRecent(rencentDate){
	pager("start","${vix}/drp/storeInformationAction!goSingleList.action?updateTime="+rencentDate,'brand');
}
function goSearch() {
	$.ajax({
	url : '${vix}/dtbcenter/vehiclePlanAction!goSearch.action',
	cache : false,
	success : function(html) {
		asyncbox.open({
		modal : true,
		width : 650,
		height : 300,
		title : "查询条件",
		html : html,
		callback : function(action) {
			if (action == 'ok') {
				loadcode();
