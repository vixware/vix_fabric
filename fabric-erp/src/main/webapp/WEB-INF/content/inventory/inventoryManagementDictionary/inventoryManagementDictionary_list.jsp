<script type="text/javascript">
/* 内容 */
var name = "";
function loadName(){
	name = $('#nameS').val();
	name=Url.encode(name);
	name=Url.encode(name);
}

function saveOrUpdate(id,pageNo){
	$.ajax({
		  url:'${vix}/inventory/inventoryManagementDictionaryAction!goSaveOrUpdate.action?id='+id+"&pageNo="+pageNo,
		  cache: false,
		  success: function(html){
		  	$("#mainContent").html(html);
		  }
	});
}
function deleteByIds(){
	var ids = '';
	$("[name='chkId']").each(function(){  
		if($(this).attr('checked')){
			ids+=$(this).val()+",";  
		}
	});
	asyncbox.success(ids,"选中的id");
}

function deleteById(id){
	$.ajax({
		  url:'${vix}/inventory/inventoryManagementDictionaryAction!deleteById.action?id='+id,
		  cache: false,
		  success: function(html){
			asyncbox.success(html,"提示信息",function(action){
				pager("start","${vix}/inventory/inventoryManagementDictionaryAction!goSingleList.action?name="+name,'invAttribute');
			});
		  }
	});
}
loadName();
//载入分页列表数据
pager("start","${vix}/inventory/inventoryManagementDictionaryAction!goSingleList.action?name="+name,'invAttribute');
//排序 
function orderBy(orderField){
	var orderBy = $("#invAttributeOrderBy").val();
	if(orderBy == 'desc'){
		orderBy = "asc";
	}else{
		orderBy = 'desc';
	}
	pager("start","${vix}/inventory/inventoryManagementDictionaryAction!goSingleList.action?orderField="+orderField+"&orderBy="+orderBy,'invAttribute');
}

function currentPager(tag){
	loadName();
	pager(tag,"${vix}/inventory/inventoryManagementDictionaryAction!goSingleList.action?name="+name,'invAttribute');
}

/* 搜索 */
function searchForContent(tag){
	loadName();
   	pager("start","${vix}/inventory/inventoryManagementDictionaryAction!goSearchTransferList.action?content="+name+"&tag="+tag,'invAttribute');
}
</script>
